        </dependency>
        
        <!-- Dependencias para WebSphere MQ -->
        <dependency>
            <groupId>com.ibm</groupId>
            <artifactId>mq</artifactId>
        </dependency>
        <dependency>
            <groupId>com.ibm</groupId>
            <artifactId>mq-jms</artifactId>
        </dependency>
    </dependencies>
</project>
